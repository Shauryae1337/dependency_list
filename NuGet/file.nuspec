<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>MyPackage</id>
    <version>1.0.0-beta</version>
    
    <!-- Modern dependencies -->
    <dependencies>
      <group targetFramework="net6.0">
        <dependency id="Serilog" version="2.0.0" />
        <dependency id="System.Text.Json" version="7.0.2" />
      </group>

      <!-- Legacy dependencies -->
      <group targetFramework="net461">
        <dependency id="Newtonsoft.Json" version="9.0.1" />
        <dependency id="NUnit" version="2.6.4" />
      </group>
    </dependencies>
  </metadata>

  <files>
    <file src="lib/net6.0/*.dll" target="lib/net6.0" />
    <file src="lib/net461/*.dll" target="lib/net461" />
  </files>
</package>
